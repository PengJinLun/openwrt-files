config wifi-device 'radio0'
	option type 'mac80211'
	option path '10180000.wmac'
	option country 'CN'
	option txpower '20'
	option hwmode '11ng'
	option htmode 'HT40+'
	option noscan  '1'
	option channel '1'

config wifi-iface
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option ssid 'GL'
	option key  'goodlife'
	option encryption 'psk-mixed'
	option ifname 'wlan0'
